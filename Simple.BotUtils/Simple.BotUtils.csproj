<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;netcoreapp2.1;netstandard1.0;netstandard2.0;net5.0;net48;net4.7.2;net4.6.1;net45;net40</TargetFrameworks>
    <LangVersion>8.0</LangVersion>
    <Version>1.3.3</Version>
    <Authors>RafaelEstevam.Net</Authors>
    <Company>RafaelEstevam.Net</Company>
    <Product>Simple Bot Utils</Product>
    <Description>A simple utility belt for small bots</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/RafaelEstevamReis/Simple.BotUtils</PackageProjectUrl>
    <RepositoryUrl>https://github.com/RafaelEstevamReis/Simple.BotUtils</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Simple Utility Bots</PackageTags>
    <PackageReleaseNotes>See examples and documentation on the GitHub page
Paired with commit 7f42b01
https://github.com/RafaelEstevamReis/Simple.BotUtils</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp3.1'">
    <PackageReference Include="System.Text.Json">
      <Version>5.0.2</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.1'">
    <PackageReference Include="System.Text.Json">
      <Version>5.0.2</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="System.Text.Json">
      <Version>5.0.2</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net5.0'">
    <PackageReference Include="System.Text.Json">
      <Version>5.0.2</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net48'">
    <PackageReference Include="System.Text.Json">
      <Version>5.0.2</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net4.7.2'">
    <PackageReference Include="System.Text.Json">
      <Version>5.0.2</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net4.6.1'">
    <PackageReference Include="System.Text.Json">
      <Version>5.0.2</Version>
    </PackageReference>
  </ItemGroup>

</Project>
